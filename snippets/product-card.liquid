<div class="w-full py-6 px-3">
    <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
        <a href="{{ product_prop.url }}">
            {% if product_prop.featured_image %}
                <div class="h-80 overflow-hidden object-cover">
                    <img class="w-full h-full transition duration-1000 ease-in-out hover:scale-105 transform" src="{{ product_prop.featured_image |  img_url: 'medium'  }}" alt="{{ product_prop.featured_image.alt }}">
                </div> 
                {% else %}
                    {{ 'product-1' |  placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}                                
            {% endif %}
        </a>
        <div class="flex flex-col p-4">
            <span class="text-sm text-gray-400">{{ product_prop.vendor }}</span>
            <a href="{{ product_prop.url }}" class="text-gray-700 uppercase font-medium">{{ product_prop.title }}</a>
            <p class="text-gray-500">{{ product_prop.price | money }}</p>
        </div>

    </div>
</div>