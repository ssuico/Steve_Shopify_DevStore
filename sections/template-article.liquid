<article>
    {% for block in section.blocks %}
        {% case block.type %}
            {% when 'article_title' %}
                <div class="flex items-center justify-center">
                    <div class="max-w-7xl text-center">
                        <a href="{{ blog.url }}" class="text-base uppercase text-gray-500 hover:text-gray-500 font-bold">{{ blog.title }}</a>
                        <h1 class="text-4xl md:text-6xl font-medium">{{ article.title }}</h1>
                    </div>
                </div>
                {% when 'article_author' %}
                    {% if section.settings.enable_author %}
                        <small>{{ article.author }}</small>
                    {% endif %}
                    {% when 'article_published_date' %}
                        {% if section.settings.enable_published_date %}
                            <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: '%Y-%m-%d' }}</time>
                        {% endif %}
                        {% when 'featured_image' %}
                            <img src="{{ article.image | img_url: 'large' }}" alt="{{ article.image.alt }}">
                            {% when 'article_content' %}
                                <div class="">{{ article.content }}</div>           
            {% else %}     
        {% endcase %}
    {% endfor %}
</article>



{% schema %}
     {
        "name": "Template Article",
        "settings": [
                {
                    "type": "checkbox",
                    "id": "enable_author",
                    "default": true,
                    "label": "Display Author"
                },
                {
                    "type": "checkbox",
                    "id": "enable_published_date",
                    "default": true,
                    "label": "Display Date"
                }
            ],
        "blocks": [
            {
                "type": "article_title",
                "name": "Title",
                "limit": 1
            },
            {
                "type": "article_author",
                "name": "Author",
                "limit": 1
            },
            {
                "type": "article_published_date",
                "name": "Published Date",
                "limit": 1
            },
            {
                "type": "featured_image",
                "name": "Thumbnail",
                "limit": 1
            },
            {
                "type": "article_content",
                "name": "Content",
                "limit": 1
            }
        ]
    }
{% endschema %}



